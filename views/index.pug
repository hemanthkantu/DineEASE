extends layout

block content
  style.
    .hero {
      background: #ff7a00;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 50px 80px;
      color: white;
      overflow: hidden;
    }

    /* Vertical THUNDERS */
    .vertical-text {
      writing-mode: vertical-rl;
      text-orientation: upright;
      font-size: 80px;
      font-weight: 800;
      color: rgba(255,255,255,0.2);
      margin-right: 40px;
      letter-spacing: 10px;
      user-select: none;
    }

    .hero-title {
      font-size: 60px;
      font-weight: 900;
      max-width: 600px;
      line-height: 1.2;
    }

    .subtitle {
      margin-top: 20px;
      font-size: 20px;
      opacity: 0.9;
    }

    .search-bar {
      margin-top: 30px;
      width: 600px;
      background: white;
      padding: 15px 25px;
      border-radius: 40px;
      display: flex;
      align-items: center;
    }

    .search-bar input {
      border: none;
      flex: 1;
      font-size: 17px;
      outline: none;
    }

    .search-button {
      background: #ff7200;
      padding: 10px 25px;
      border-radius: 30px;
      color: white;
      cursor: pointer;
      border: none;
      font-weight: bold;
    }

    .links {
      margin-top: 20px;
      font-size: 18px;
    }

    .links a {
      color: white;
      font-weight: bold;
      margin-right: 20px;
    }

  .hero
    .left
      h1.hero-title Taste the Best Food in Your City üçΩÔ∏è
      p.subtitle Fresh ‚Ä¢ Fast ‚Ä¢ Delicious ‚Äî Experience next-level dining with DineEase.

      .search-bar
        input(type="text" placeholder="Search for dishes, restaurants, cuisines...")
        button.search-button Search

      .links
        a(href="/menu") Explore Menu
        a(href="/contact") Contact Us

    // Right side THUNDERS
    .right
      div.vertical-text THUNDERS
