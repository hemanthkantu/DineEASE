extends layout

block content
  style.
    .menu-header {
      text-align: center;
      margin-top: 30px;
      margin-bottom: 40px;
    }
    .menu-header h1 {
      font-size: 42px;
      font-weight: bold;
      color: #222;
    }
    .menu-header p {
      margin-top: 10px;
      font-size: 18px;
      color: #555;
    }

    .menu-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 25px;
      padding: 20px 50px;
    }

    .menu-card {
      background: white;
      border-radius: 14px;
      padding: 18px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      transition: 0.3s;
      text-align: center;
    }

    .menu-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    .menu-card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 10px;
    }

    .menu-title {
      margin-top: 10px;
      font-size: 22px;
      font-weight: bold;
      color: #333;
    }

    .menu-desc {
      font-size: 15px;
      color: #666;
      margin-top: 6px;
    }

    .menu-price {
      margin-top: 8px;
      font-size: 20px;
      font-weight: bold;
      color: #D35400;
    }

    .add-btn {
      background: #D35400;
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      margin-top: 12px;
      cursor: pointer;
      font-weight: bold;
      border: none;
    }

  .menu-header
    h1 Classic THUNDERS Menu
    p Taste the Best – Freshly crafted with passion.

  .menu-grid
    each item in items
      .menu-card
        img(src=item.image_url alt=item.item_name)
        .menu-title #{item.item_name}
        .menu-desc #{item.description}
        .menu-price ₹#{item.price}
        button.add-btn(onclick=`addToCart(${item.item_id}, '${item.item_name}', ${item.price})`) Add to Cart

  script.
    function addToCart(id, name, price) {
      let cart = JSON.parse(localStorage.getItem("cart")) || [];

      cart.push({ id, name, price, qty: 1 });

      localStorage.setItem("cart", JSON.stringify(cart));

      alert(name + " added to cart!");
    }
