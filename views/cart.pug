extends layout

block content
  .cart-container
    h1.cart-heading Your Cart

    if cart.length === 0
      p.empty-cart Your cart is empty üòî
      a.btn(href="/menu") Browse Menu
    else
      .cart-box
        each item, index in cart
          .cart-item
            .item-info
              h3= item.name
              span.price ‚Çπ#{item.price}
            form(method="POST", action="/cart/delete")
              input(type="hidden", name="index", value=index)
              button.remove-btn(type="submit") ‚ùå Remove

        hr
        .cart-summary
          h3 Total: ‚Çπ#{total}
          a.checkout-btn(href="/checkout") Proceed to Checkout
